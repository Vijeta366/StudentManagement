    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "ajax": {
                    "url": "/home/loaddata",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns" : [
                        { "data": "Date", "autoWidth": true },
                        { "data": "IsPresent", "autoWidth": true },
                    {
                        "data": "StudentId
                            ", "autoWidth": true },
                        
                    ]
            });
        });
